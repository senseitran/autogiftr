<%= simple_form_for(@occaision) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Name of occaision' %>
    <%= f.input :occaision_type, label: 'Type of occasion', collection: ['Birthday', 'Anniverary', 'Valentines', 'Religious holiday'] %>
    <%= f.input :message %>
    <%= f.input :date %>
    <%= f.input :recipient_id, input_html: { value: @recipient }, as: :hidden %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
