<h1>Listing occaisions</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Name</th>
      <th>Date</th>
      <th>Occaision type</th>
      <th>Recipient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occaisions.each do |occaision| %>
      <tr>
        <td><%= occaision.message %></td>
        <td><%= occaision.name %></td>
        <td><%= occaision.date %></td>
        <td><%= occaision.occaision_type %></td>
        <td><%= occaision.recipient %></td>
        <td><%= link_to 'Show', occaision %></td>
        <td><%= link_to 'Edit', edit_occaision_path(occaision) %></td>
        <td><%= link_to 'Destroy', occaision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

