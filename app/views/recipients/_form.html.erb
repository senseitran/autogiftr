<%= simple_nested_form_for(@recipient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'form-control' } %>
    <%= f.input :address, input_html: { class: 'form-control' } %>
  </div>

  <p><strong>Add occasions</strong></p>
  <%= f.fields_for :occaisions do |occaision_field| %>
  	<%= occaision_field.input :name %>
  	<%= occaision_field.input :occaision_type, collection: ['Birthday', 'Anniversary', 'Valentines', 'Other'] %> 
  	<%= occaision_field.input :date %>
  	<%= occaision_field.input :message %>
   	<%= occaision_field.link_to_remove "Remove this occasion" %>
  <% end %>
  
  <%= f.link_to_add "Add occasion", :occaisions %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
